@model PeriodicPlanModel
@{
    ViewData["Title"] = "Periodic Plan";
}
<div class="row">

    <div class="col-8" >
        @(Html.DevExtreme().Scheduler()
            .ID("scheduler")
            .DataSource(d => d.RemoteController().LoadUrl(Url.Page("PeriodicPlan", "SelectPlan")).Key("Chave"))
            .Views(views =>
            {
                views.Add()
                    .Name("1 Work Week")
                    .Type(SchedulerViewType.WorkWeek)
                    .IntervalCount(1)
                    .StartDate(new DateTime(2019, 3, 11))
                    .MaxAppointmentsPerCell(MaxAppointmentsPerCell.Auto);

                views.Add()
                    .Name("2 Work Week")
                    .Type(SchedulerViewType.WorkWeek)
                    .IntervalCount(1)
                    .StartDate(new DateTime(2019, 3, 18));
              
                views.Add()
                    .Name("3 Work Week")
                    .Type(SchedulerViewType.WorkWeek)
                    .IntervalCount(1)
                    .StartDate(new DateTime(2019, 3, 25));
                views.Add()
                    .Name("4 Work Week")
                    .Type(SchedulerViewType.WorkWeek)
                    .IntervalCount(1)
                    .StartDate(new DateTime(2019, 4, 1));
            })
              .Resources(res =>
                {
                    res.Add()
                        .FieldExpr("vcCodClass")
                        .ValueExpr("vcClassType")
                        .DisplayExpr("Classe Comercial")
                        .ColorExpr("vcCor")
                        .Label("vcClassType")
                        .DataSource(d => d.RemoteController().LoadUrl(Url.Page("CostumerClass", "ClassTypes")).Key("vcCodClass"));
                })
            .CurrentView(SchedulerViewType.WorkWeek)
            .CurrentDate(new DateTime(2019, 3, 11))
            .StartDayHour(9)
            .Height(600)
            .TextExpr("vcNome")
            .StartDateExpr("dtDataIni")
            .EndDateExpr("dtDataFim")
        )
    </div>

    <div class="col-4">

        <div class="row">
            <div class="card w-100">
                <div class="card-header">
